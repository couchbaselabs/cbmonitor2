FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY . .

# Build the grafana-app service
RUN go build -o grafana-app ./cmd/grafana-app

FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/grafana-app .
COPY --from=builder /app/configs/grafana-app/config.yaml ./config.yaml

EXPOSE 3001

CMD ["./grafana-app"] 